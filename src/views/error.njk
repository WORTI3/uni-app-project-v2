{% extends "../_layouts/template.njk" %}
{% set title = error.status %}

{% block mainContent %}
{# Common wrapper for styling within the app #}
<div class="p-12 bg-white sm:mx-auto rounded-md w-1/2 max-sm:w-full max-sm:p-6">
  {# Display any abnormal error on the front end UI without crashing the app #}
  <h1 class="text-center">{{ error.status or 404 }}</h1>
  <h2>Error: {{ message }}</h2>
  <p>Looks like the application has thrown an error</p>
  <p>Please try again later</p>
</div>
{% endblock %}